// ---------------------------------------------------------
// @Borders
// ---------------------------------------------------------

$base-border-color  := $color-grey-muted
$base-border-radius := 2px
$base-border-style  := solid
$base-border-width  := 1px
$base-border        := $base-border-width $base-border-style








// ---------------------------------------------------------
// @Shadows
// ---------------------------------------------------------

$shadow-mini   := 0 2px 6px  hsla(0, 0%, 0%, 0.12)
$shadow-tiny   := 0 4px 12px hsla(0, 0%, 0%, 0.12)
$shadow-small  := 0 6px 18px hsla(0, 0%, 0%, 0.12)
$shadow-medium := 0 8px 24px hsla(0, 0%, 0%, 0.12)
