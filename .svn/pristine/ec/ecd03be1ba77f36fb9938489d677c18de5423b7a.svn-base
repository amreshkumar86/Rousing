package com.niveus.oen.Utils;

import android.content.Context;
import android.graphics.Typeface;

/**
 * Created by Adarsh on 06-Jul-17.
 */

public class FontsProvider {

    private Typeface light;
    private Typeface regular;
    private Typeface bold;
    private Typeface hellBold;
    private Typeface robotoLight;
    private Typeface robotoRegular;

    public FontsProvider(Context context){
        this.light = Typeface.createFromAsset(context.getAssets(), "Fonts/open_sans_light.ttf");
        this.regular = Typeface.createFromAsset(context.getAssets(), "Fonts/open_sans_regular.ttf");
        this.bold = Typeface.createFromAsset(context.getAssets(), "Fonts/open_sans_bold.ttf");
        this.hellBold = Typeface.createFromAsset(context.getAssets(), "Fonts/open_sans_hell_bold.ttf");
        this.robotoLight = Typeface.createFromAsset(context.getAssets(), "Fonts/roboto_light.ttf");
        this.robotoRegular = Typeface.createFromAsset(context.getAssets(), "Fonts/roboto_regular.ttf");
    }

    public Typeface getLight() {
        return light;
    }

    public Typeface getRegular() {
        return regular;
    }

    public Typeface getBold() {
        return bold;
    }

    public Typeface getHellBold() {
        return hellBold;
    }

    public Typeface getRobotoLight() {
        return robotoLight;
    }

    public Typeface getRobotoRegular() {
        return robotoRegular;
    }
}
