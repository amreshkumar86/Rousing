// ---------------------------------------------------------
// @Shared
// ---------------------------------------------------------

/**
 * Replace pointer cursor in disabled elements.
 */

[disabled]
  // Styles
  opacity: 0.35

  // Extra
  cursor: default
  pointer-events: none




/**
 * Reset read-only inputs cursor to default.
 */

[readonly]
  // Extra
  cursor: default




/**
 * Remove the default styling in all browsers.
 */

fieldset,
button,
input,
select,
optgroup,
textarea
  // Typography
  font: inherit
  line-height: inherit

  // Theme
  color: inherit
  background: transparent




/**
 * Show the overflow in IE.
 */

button,
input
  // Layout
  overflow: visible




/**
* [1] : Add the correct box sizing in IE 10-.
* [2] : Remove the padding in IE 10-.
*/

[type='checkbox'],
[type='radio']
  // Layout
  box-sizing: border-box // [1]
  padding: 0             // [2]








// ---------------------------------------------------------
// @Input
// ---------------------------------------------------------

input::-ms-clear
  // Layout
  display: none








// ---------------------------------------------------------
// @Button
// ---------------------------------------------------------

/**
 * Apply cursor pointer to button elements.
 */

button,
[type='button'],
[type='reset'],
[type='submit'],
[role='button']
  // Extra
  cursor: pointer




/**
 * Remove the inner border and padding in Firefox.
 */

button::-moz-focus-inner,
button:-moz-focusring,
[type='button']::-moz-focus-inner,
[type='reset']::-moz-focus-inner,
[type='submit']::-moz-focus-inner
  // Layout
  padding: 0

  // Styles
  border-style: none
  outline-width: 0









// ---------------------------------------------------------
// @Number
// ---------------------------------------------------------

/**
 * [1] : Mozilla shows the spinner UI on number inputs unless we use this.
 */

[type='number']
  // Layout
  width: auto

  // Vendor Specific
  -moz-appearance: textfield // [1]




/**
 * Removes the little spinner controls for number type input.
 */

[type='number']::-webkit-inner-spin-button,
[type='number']::-webkit-outer-spin-button
  // Vendor Specific
  -webkit-appearance: none








// ---------------------------------------------------------
// @Search
// ---------------------------------------------------------

/**
 * Correct the odd appearance in Chrome and Safari.
 */

[type='search']
  // Vendor Specific
  -webkit-appearance: textfield




/**
 * Remove the inner padding and cancel buttons in Chrome and Safari on MacOS.
 */

[type='search']::-webkit-search-cancel-button,
[type='search']::-webkit-search-decoration
  // Vendor Specific
  -webkit-appearance: none








// ---------------------------------------------------------
// @Textarea
// ---------------------------------------------------------

/**
 * [1] : Internet Explorer 11+
 * [2] : Specify textarea resizability
 */

textarea
  // Layout
  overflow: auto   // [1]

  // Extra
  resize: vertical // [2]








// ---------------------------------------------------------
// @Select
// ---------------------------------------------------------

select
  // Vendor Specific
  -webkit-appearance: none
  -moz-appearance: none

select::-ms-expand
  // Layout
  display: none

select::-ms-value
  // Theme
  color: currentColor




/**
 * Removes the default focusring that Mozilla places on select items.
 */

select:-moz-focusring
  // Styles
  text-shadow: 0 0 0 #000

  // Theme
  color: transparent








// ---------------------------------------------------------
// @Legend
// ---------------------------------------------------------

/**
 * [1] : Correct the text wrapping in Edge and IE.
 * [2] : Correct the text wrapping in Edge and IE.
 * [3] : Correct the text wrapping in Edge and IE.
 * [4] : Correct `color` not being inherited in IE 8/9/10/11.
 * [5] : Correct the color inheritance from `fieldset` elements in IE.
 */

legend
  // Typography
  white-space: normal  // [1]

  // Layout
  display: table       // [2]
  max-width: 100%      // [3]

  // Styles
  border: 0            // [4]

  // Theme
  color: inherit       // [5]








// ---------------------------------------------------------
// @File Upload
// ---------------------------------------------------------

/**
 * [1] : Change font properties to `inherit` in Chrome and Safari.
 * [2] : Correct the inability to style clickable types in iOS and Safari.
 */

::-webkit-file-upload-button
  // Typography
  font: inherit               // [1]

  // Vendor Specific
  -webkit-appearance: button  // [2]








// ---------------------------------------------------------
// @Progress
// ---------------------------------------------------------

progress
  // Layout
  display: inline-block
  vertical-align: baseline
