/**
 * Project-wide `transition` property variables.
 */

$default-transition-property        := all
$default-transition-duration        := 280ms
$default-transition-timing-function := ease-in-out
$default-transition-delay           := 0ms





/**
 * Used for shorthand property.
 */

$default-transition := $default-transition-property $default-transition-duration $default-transition-timing-function $default-transition-delay








// ---------------------------------------------------------
// @Animations
// ---------------------------------------------------------

/**
 * Project-wide `animation` property variables.
 */

$default-animation-duration        := 280ms
$default-animation-timing-function := ease-in-out
$default-animation-delay           := 0ms
$default-animation-iteration-count := 1
$default-animation-direction       := normal
$default-animation-fill-mode       := none
$default-animation-play-state      := running
$default-animation-name            := none




/**
 * Used for `animation` shorthand property.
 */

$default-animation  := $default-animation-duration $default-animation-timing-function $default-animation-delay $default-animation-iteration-count $default-animation-direction $default-animation-fill-mode $default-animation-play-state $default-animation-name
