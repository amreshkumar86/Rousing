// ---------------------------------------------------------
// @Settings
// ---------------------------------------------------------

// #Layout Variables
// -------------------------------------

$grid-gap        = $spacing-unit-small
$grid-gap-mini   = $spacing-unit-mini
$grid-gap-tiny   = $spacing-unit-tiny
$grid-gap-small  = $spacing-unit-small
$grid-gap-medium = $spacing-unit-medium
$grid-gap-large  = $spacing-unit-large
$grid-gap-big    = $spacing-unit-big








// ---------------------------------------------------------
// @Grid
// ---------------------------------------------------------

// #Grid Structure
// -------------------------------------

.o-grid
  // Layout
  display: flex
  flex-flow: row wrap
  margin-left: -($grid-gap)
  margin-bottom: -($grid-gap)

  // Styles
  list-style: none







// #Grid Modifiers
// -------------------------------------

.o-grid--miniGap
  // Layout
  margin-left: -($grid-gap-mini)
  margin-bottom: -($grid-gap-mini)

.o-grid--tinyGap
  // Layout
  margin-left: -($grid-gap-tiny)
  margin-bottom: -($grid-gap-tiny)

.o-grid--smallGap
  // Layout
  margin-left: -($grid-gap-small)
  margin-bottom: -($grid-gap-small)

.o-grid--mediumGap
  // Layout
  margin-left: -($grid-gap-medium)
  margin-bottom: -($grid-gap-medium)


.o-grid--largeGap
  // Layout
  margin-left: -($grid-gap-large)
  margin-bottom: -($grid-gap-large)


.o-grid--bigGap
  // Layout
  margin-left: -($grid-gap-big)
  margin-bottom: -($grid-gap-big)

.o-grid--gapless
  // Layout
  margin-left: 0
  margin-bottom: 0







// #Grid Context
// -------------------------------------

.o-grid
  .o-grid
    // Styles
    flex: 1 1 auto








// ---------------------------------------------------------
// @Grid Cell
// ---------------------------------------------------------

// #Grid Cell Structure
// -------------------------------------

.o-grid__cell
  // Layout
  flex-basis: auto
  max-width: 100%
  position: relative
  padding-left: $grid-gap
  padding-bottom: $grid-gap







// #Grid Cell Modifiers
// -------------------------------------

.o-grid__cell--auto
  // Layout
  flex: 1 1 auto
  max-width: 100%







// #Grid Cell Context
// -------------------------------------

.o-grid__cell
  .o-grid--miniGap > &
    // Layout
    padding-left: $grid-gap-mini
    padding-bottom: $grid-gap-mini


  .o-grid--tinyGap > &
    // Layout
    padding-left: $grid-gap-tiny
    padding-bottom: $grid-gap-tiny


  .o-grid--smallGap > &
    // Layout
    padding-left: $grid-gap-small
    padding-bottom: $grid-gap-small


  .o-grid--mediumGap > &
    // Layout
    padding-left: $grid-gap-medium
    padding-bottom: $grid-gap-medium


  .o-grid--largeGap > &
    // Layout
    padding-left: $grid-gap-large
    padding-bottom: $grid-gap-large


  .o-grid--bigGap > &
    // Layout
    padding-left: $grid-gap-big
    padding-bottom: $grid-gap-big


  .o-grid--gapless > &
    // Layout
    padding-left: 0
    padding-bottom: 0
