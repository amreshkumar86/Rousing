// #Ratio Box Structure
// -------------------------------------

/**
 * [1] : Default box ratio is 1:1.
 */

.o-ratio
  // Layout
  position: relative
  display: block
  overflow: hidden



  // === Pseudo Elements

  &::before
    // Layout
    display: block
    width: 100%
    padding-bottom: 100% // [1]

    // Extra
    content: ''







// #Ratio Box Modifiers
// -------------------------------------

[class*='o-ratio--2/1']::before
  // Layout
  padding-bottom: 50%




[class*='o-ratio--4/3']::before
  // Layout
  padding-bottom: calc(100% * 3 / 4)




[class*='o-ratio--3/2']::before
  // Layout
  padding-bottom: calc(100% * 2 / 3)




[class*='o-ratio--16/9']::before
  // Layout
  padding-bottom: calc(100% * 9 / 16)








// ---------------------------------------------------------
// @Ratio Box Decendants
// ---------------------------------------------------------

// #Ratio Box Decendants Structure
// -------------------------------------

.o-ratio
  &__content,
  > iframe,
  > embed,
  > object
    // Layout
    width: 100%
    height: 100%
    position: absolute
    top: 0
    bottom: 0
    left: 0
