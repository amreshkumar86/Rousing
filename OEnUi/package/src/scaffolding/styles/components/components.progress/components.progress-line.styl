.c-progressLine
  position: relative
  display: block
  width: 100%
  height: 3px

.c-progressLine__percent
  display: block
  position: absolute
  height: 100%
  top: 0
  left: 0


.c-progressLine--light
  background: $clr-white-100


.c-progressLine--dark
  background: alpha($color-grey-muted, 0.5)
