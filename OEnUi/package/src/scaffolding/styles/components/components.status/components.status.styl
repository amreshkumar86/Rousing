.c-status
  // Layout
  display: inline-block
  width: 12px
  height: 12px
  vertical-align: middle

  // Styles
  border: 2px solid
  border-radius: 50%

  // Theme
  background: $color-main




.c-status
.c-status--omitted
  // Theme
  border-color: $color-grey-omitted




.c-status--error
  // Theme
  border-color: $color-aside-error




.c-status--sucess
  // Theme
  border-color: $color-aside-success




.c-status--warning
  // Theme
  border-color: $color-aside-warning




.c-status--primary
  // Theme
  border-color: $color-variant-primary




.c-status--blue
  // Theme
  border-color: #2196f3




.c-status--red
  // Theme
  border-color: #f44336




.c-status--indigo
  // Theme
  border-color: #3f51b5




.c-status--yellow
  // Theme
  border-color: #ffc107




.c-status--magneta
  // Theme
  border-color: $clr-pink




.c-status--green
  // Theme
  border-color: #4caf50
