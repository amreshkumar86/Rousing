// ---------------------------------------------------------
// @Settings
// ---------------------------------------------------------

$border        = $base-border
$border-color  = $base-border-color
$border-radius = $base-border-radius








// ---------------------------------------------------------
// @Borders
// ---------------------------------------------------------

.u-border-all
  border: $border $border-color





.u-border-x
  border-left: $border $border-color
  border-right: $border $border-color





.u-border-y
  border-top: $border $border-color
  border-bottom: $border $border-color





.u-border-top
  border-top: $border $border-color





.u-border-right
  border-right: $border $border-color





.u-border-bottom
  border-bottom: $border $border-color





.u-border-left
  border-left: $border $border-color





.u-border-x-none
  border-left: none
  border-right: none





.u-border-y-none
  border-top: none
  border-bottom: none





.u-border-top-none
  border-top: none





.u-border-right-none
  border-right: none





.u-border-bottom-none
  border-bottom: none





.u-border-left-none
  border-left: none





.u-border-none
  border: none








// ---------------------------------------------------------
// @Border Radius
// ---------------------------------------------------------

.u-radius-base
  border-radius: $border-radius




.u-radius-mini
  border-radius: 2px




.u-radius-tiny
  border-radius: 3px




.u-radius-small
  border-radius: 4px




.u-radius-medium
  border-radius: 6px




.u-radius-rounded
  border-radius: 100em




.u-radius-circle
  border-radius: 50%




.u-square
  border-radius: 0
