// #Input Structure
// -------------------------------------

input
  // Typography
  text-align: left
  line-height: 1

  // Layout
  flex: 1 0 auto
  max-width: 100%
  margin: 0

  // Styles
  outline: none
  border: none
  box-shadow: 0 0 0 0 rgba(0, 0, 0, 0)

  // Theme
  background: rgba(0, 0, 0, 0)
  color: inherit

  // Easing
  transition: $default-transition

  // Vendor Specific
  -webkit-tap-highlight-color: rgba(255, 255, 255, 0)
  -moz-appearance: none
  -webkit-appearance: none
