// ---------------------------------------------------------
// @Table of Contents
// ---------------------------------------------------------

/**
 * + @Shared
 * + @Audio
 * + @Templates
 * + @Images
 * + @SVG
 */








// ---------------------------------------------------------
// @Shared
// ---------------------------------------------------------

audio,
canvas,
img,
progress,
svg,
video
  // Layout
  display: inline-flex








// ---------------------------------------------------------
// @Audio
// ---------------------------------------------------------

/**
 * Add the correct display in iOS 4-7.
 */

audio:not([controls])
  // Layout
  display: none
  height: 0








// ---------------------------------------------------------
// @Templates
// ---------------------------------------------------------

/**
 * Add the correct display in IE.
 */

template
  // Layout
  display: none








// ---------------------------------------------------------
// @Images
// ---------------------------------------------------------

/**
 * [1] : Make images behave responsively.
 * [2] : Remove border when inside `a` element in IE 8/9/10.
 */

img
  // Layout
  max-width: 100%    // [1]

  // Styles
  border-style: none // [2]








// ---------------------------------------------------------
// @SVG
// ---------------------------------------------------------

svg:not(:root)
  // Layout
  overflow: hidden
