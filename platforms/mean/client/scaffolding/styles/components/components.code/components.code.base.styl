// #Layout Variables
// -------------------------------------

$inline-code-padding = 0.33em







// #Colors Variables
// -------------------------------------

$inline-code-background = $color-grey-muted
$inline-code-color = $color-grey-pivotal








// ---------------------------------------------------------
// @Inline Code
// ---------------------------------------------------------

// #Inline Code Structure
// -------------------------------------

code,
kbd
  // Typography
  white-space: nowrap

  // Layout
  padding: $inline-code-padding

  // Styles
  border-radius: $base-border-radius

  // Theme
  background: $inline-code-background
  color: $inline-code-color
