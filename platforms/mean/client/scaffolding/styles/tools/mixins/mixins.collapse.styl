// ---------------------------------------------------------
// @Collapse Margins Mixin
// ---------------------------------------------------------

/**
 * Mixin used to remove top margin of the first
 * child and bottom margin of the last one.
 */

collapse($direction = 'vertical')
  if -is-string($direction)
    if $direction == 'vertical'
      & > :first-child
        margin-top: 0

      & > :last-child
        margin-bottom: 0

    if $direction == 'horizontal'
      & > :first-child
        margin-left: 0

      & > :last-child
        margin-right: 0
