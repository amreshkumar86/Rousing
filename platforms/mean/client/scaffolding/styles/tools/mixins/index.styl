/**
 * + @Font Smoothing Mixin
 * + @Clearfix Mixin
 * + @Collapse Margins Mixin
 * + @Hardware Acceleration Mixin
 * + @Image Replacement Mixin
 * + @Media Queries Mixin
 * + @Ratio Box Mixin
 * + @Triangle Mixin
 * + @Text Truncate Mixin
 * + @Undragable Mixin
 * + @Unhighlightable Mixin
 * + @Unselectable Mixin
 * + @Ripple Mixin
 */




// ---------------------------------------------------------
// @Font Smoothing Mixin
// ---------------------------------------------------------

/**
 * Mixin used to do font optimization cross browsers.
 */

@import 'mixins.antialiasing'




// ---------------------------------------------------------
// @Clearfix Mixin
// ---------------------------------------------------------

/**
 * Use on parent elements that contain floats
 * to prevent floated children from getting out of flow.
 */

@import 'mixins.clearfix'




// ---------------------------------------------------------
// @Collapse Margins Mixin
// ---------------------------------------------------------

/**
 * Mixin used to remove top margin of the first
 * child and bottom margin of the last one.
 */

@import 'mixins.collapse'




// ---------------------------------------------------------
// @Hardware Acceleration Mixin
// ---------------------------------------------------------

/**
 * Mixin used to enable hardware acceleration,
 * use this on the desired element.
 */

@import 'mixins.gpu'




// ---------------------------------------------------------
// @Image Replacement Mixin
// ---------------------------------------------------------

/**
 * Mixin used to replace text with image.
 */

@import 'mixins.image-replacement'




// ---------------------------------------------------------
// @Media Queries Mixin
// ---------------------------------------------------------

/**
 * Mixin used to generate media queries.
 */

@import 'mixins.media-mixin'




// ---------------------------------------------------------
// @Ratio Box Mixin
// ---------------------------------------------------------

/**
 * Mixin used to make containers widows
 * with relative widths & heights.
 */

@import 'mixins.ratio-box'




// ---------------------------------------------------------
// @Triangle Mixin
// ---------------------------------------------------------

/**
 * Mixin used to make arrows/pointers.
 */

@import 'mixins.triangle'




// ---------------------------------------------------------
// @Text Truncate Mixin
// ---------------------------------------------------------

/**
 * Mixin used to truncate text with ellipsis.
 */

@import 'mixins.truncate'




// ---------------------------------------------------------
// @Undragable Mixin
// ---------------------------------------------------------

/**
 * Mixin used to prevent users from dragging page elements.
 */

@import 'mixins.undragable'




// ---------------------------------------------------------
// @Unhighlightable Mixin
// ---------------------------------------------------------

/**
 * Mixin used to disable WebKit tap highlights
 * to simulate native app behaviour.
 */

@import 'mixins.unhighlightable'




// ---------------------------------------------------------
// @Unselectable Mixin
// ---------------------------------------------------------

/**
 * Mixin used to prevent user selection.
 */

@import 'mixins.unselectable'




// ---------------------------------------------------------
// @Ripple Mixin
// ---------------------------------------------------------

/**
 * Mixin used to generate ripple animation effect
 * on the element it is applied to.
 */

@import 'mixins.ripple'